<h1>Image list</h1>

<%= link_to 'Add new image', new_image_path %>

<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
    </tr>
    
    
    <% @images.each do |image| %>
    <tr>
        <td><%= image.title %></td>
        <td><%= image.description %></td>
        <td><img src="<%= image.image %>"></td>
        <td><%= link_to 'Show', image_path(image) %></td>
    </tr>
    <% end %>
    
</table>